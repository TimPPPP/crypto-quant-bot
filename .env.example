# ===================================================================
# Crypto Quant Bot - Environment Configuration Template
# ===================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# -------------------------------------------------------------------
# Jupyter Configuration
# -------------------------------------------------------------------
JUPYTER_TOKEN=your_secure_random_token_here
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"

# -------------------------------------------------------------------
# Risk Management Parameters
# -------------------------------------------------------------------
RISK_EQUITY=10000              # Initial equity (USD)
RISK_PER_TRADE=0.01           # Risk per trade (1% of equity)
RISK_MAX_LEVERAGE=2.0         # Maximum leverage allowed

# -------------------------------------------------------------------
# Trading Configuration
# -------------------------------------------------------------------
PAPER_TRADING=true            # Set to 'false' for live trading (CAUTION!)
TICK_LOOP_INTERVAL=30         # Signal check interval (seconds)
SCANNER_LOOP_INTERVAL=86400   # Pair discovery interval (seconds)

# -------------------------------------------------------------------
# Database Configuration
# -------------------------------------------------------------------
QUESTDB_HOST=db               # Use 'db' for Docker, 'localhost' for local
QUESTDB_HTTP_PORT=9000        # QuestDB Web UI
QUESTDB_ILP_PORT=9009         # Ingestion port
QUESTDB_PG_PORT=8812          # PostgreSQL wire protocol

# -------------------------------------------------------------------
# API Configuration
# -------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true               # Auto-reload on code changes (dev only)

# -------------------------------------------------------------------
# Exchange API Keys (for live trading)
# -------------------------------------------------------------------
# Hyperliquid
HYPERLIQUID_API_KEY=your_hyperliquid_api_key
HYPERLIQUID_API_SECRET=your_hyperliquid_secret

# Deribit
DERIBIT_API_KEY=your_deribit_api_key
DERIBIT_API_SECRET=your_deribit_secret

# OKX
OKX_API_KEY=your_okx_api_key
OKX_API_SECRET=your_okx_secret
OKX_PASSPHRASE=your_okx_passphrase

# -------------------------------------------------------------------
# Grafana Configuration
# -------------------------------------------------------------------
GF_SECURITY_ADMIN_PASSWORD=admin    # Change for production!
GF_INSTALL_PLUGINS=questdb-questdb-datasource

# -------------------------------------------------------------------
# Python Configuration
# -------------------------------------------------------------------
PYTHONUNBUFFERED=1
PYTHONPATH=/app

# -------------------------------------------------------------------
# Logging
# -------------------------------------------------------------------
LOG_LEVEL=INFO                # DEBUG, INFO, WARNING, ERROR, CRITICAL
